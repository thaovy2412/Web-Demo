<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <!-- FONT AWESOME -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"
      integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog=="
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/main.css" type="text/css" />
    <title>Products</title>
  </head>
  <body>
    <div class="container mt-5 content">
      <form action="/" method="GET" class="formSearch">
        <div class="input-group">
          <input
            type="text"
            class="form-control"
            placeholder="Nhập vào mã sản phẩm"
            name="masp"
          />
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class="fa fa-search"></i>
            </button>
          </div>
        </div>
      </form>
      <div class="infoSearch">
        <% if (typeof masp!=='undefined') { %>
        <span class="masp"
          >Kết quả tìm kiếm cho mã sản phẩm <%- masp %> là:
        </span>
        <% } %> 
        <% if (typeof masp!=='undefined'&&typeof errors!=='undefined') { %>
          <em class="error"> <%- errors %> </em> <% } %>
        <% if (typeof masp!=='undefined'&&typeof products==='undefined'&& typeof errors==='undefined' ) { %>
        <span class="noresult">Không có kết quả tìm kiếm phù hợp.</span> <% } %>
        <% if (typeof products!=='undefined'){ %> <%
        products.forEach((product)=> { %>
        <div class="card">
          <img class="card-img-top" src="<%- product.hinhAnh %>" />
          <div class="card-body">
            <h4 class="card-title"><%- product.tenSanPham %></h4>
            <p class="card-text">Số lượng: <%- product.soLuong %></p>
          </div>
        </div>
        <% }) %> <% } %>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
